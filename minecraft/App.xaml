<Application x:Class="nihilus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:nihilus"
             StartupUri="View/Xaml/MainWindow.xaml"
             Exit="ExitApplication">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Resources/dictionaries/Styles.xaml" />
                <ResourceDictionary Source="View/Resources/dictionaries/WindowStyles.xaml" />
                <ResourceDictionary Source="View/Resources/dictionaries/ButtonStyles.xaml" />
                <ResourceDictionary Source="View/Resources/dictionaries/DarkTheme.xaml"/>
                <ResourceDictionary Source="View/Resources/dictionaries/RadioButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MaterialIO">View/Resources/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
